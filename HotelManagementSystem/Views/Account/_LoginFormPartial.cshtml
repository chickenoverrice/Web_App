@using HotelManagementSystem.Models
@model LoginViewModel

@Html.AntiForgeryToken()
<h4>Log in</h4>
<hr />
@Html.ValidationSummary(false, "", new { @class = "text-danger" })
<div class="form-group" >
    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
    <div class="col-md-10" style= "margin-bottom: 10px;">
        @Html.TextBoxFor(m => m.Email, new { @id = "EmailLogIn", @class = "form-control"})
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger field-validation-error" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.PasswordFor(m => m.Password, new { @id = "PasswordLogIn", @required = true, @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger field-validation-error" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe, new { @id = "RememberLogIn" })
            @Html.LabelFor(m => m.RememberMe)
        </div>
    </div>
</div>

