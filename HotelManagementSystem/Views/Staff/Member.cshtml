@model DataModel.Staff

@{
    ViewBag.Title = "Member";
}

<br />
<br />
<h4>Staff Member Summary</h4>

<ul>
    <li>@Html.ActionLink("Inventory", "Inventory", "Staff")</li>
    <li>@Html.ActionLink("Hotel Status", "HotelStatus", "Staff")</li>
</ul>

<div class="container well">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">@Model.firstName @Model.lastName</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://askpaulmedia.com/wp-content/uploads/2016/11/raf.png" class="img-circle img-responsive"> </div>

                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                    <tr>
                                        <td>Name:</td>
                                        <td>@Model.firstName @Model.lastName</td>
                                    </tr>
                                    <tr>
                                        <td>Email:</td>
                                        <td>@Model.email</td>
                                    </tr>
                                    <tr>
                                        <td>Phone: </td>
                                        <td>@Model.phone</td>
                                    </tr>
                                    <tr>
                                        <td>Address: </td>
                                        <td>@Model.address</td>
                                    </tr>
                                    <tr>
                                        <td>City: </td>
                                        <td>@Model.city</td>
                                    </tr>
                                    <tr>
                                        <td>State: </td>
                                        <td>@Model.state</td>
                                    </tr>
                                    <tr>
                                        <td>Zip Code: </td>
                                        <td>@Model.zip</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
